show 'Enter the file name to be populated: ';

take file = File(recieve, File::MODE_WRITE);

if(!file.is_opened()) {
	System::print_error('Could not create the file!');
	System::exit(System::EXIT_FAILURE);
}

showl "Type '.done' to finish...";

take line;

while((line = recieve) != '.done') 
	file.write_line(line);

file.close();
