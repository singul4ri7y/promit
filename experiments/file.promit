// This is simple file manipulation example in promit.

take fileName;

show "Enter a file name to print it's contents: ";

recieve fileName;

showl "Opening file '$fileName'...";

take file = File(fileName, File::MODE_READ),
     line;
	
if(!file.is_opened()) {
	showl "Could not open file '$fileName'!";
	System::exit(System::EXIT_FAILURE);
}

showl 'Printing file contents...';

while((line = file.read_line(true) /* Without the newline character */
	) != File::EOF) 
	showl line;
