take a = 10034229,
     b = 3343;

showl 'a + b : ${a + b}';
showl 'a - b : ${a - b}';
showl 'a / b : ${a / b}';
showl 'a * b : ${a * b}';
showl 'a % b : ${a % b}';
showl 'a == b : ${a == b}';
showl 'a != b : ${a != b}';
showl 'a && b : ${a && b}';
showl 'a || b : ${a || b}';

showl 'As conditions : ';
showl 'true && true : ${true && true}';
showl 'false && true : ${false && true}';
showl 'true || false : ${true || false}';
showl 'false || false : ${false || false}';
