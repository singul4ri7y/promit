// Promit has cuple of bitwise operators.

take a = 32779234,
     b = 23455;

showl 'a & b : ${a & b}';
showl 'a | b : ${a | b}';
showl 'a ^ b : ${a ^ b}';
showl 'a << b : ${a << b}';
showl 'a >> b : ${a >> b}';
showl '~a and ~b : ${~a} and ${~b}';
