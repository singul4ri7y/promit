// Number::MAX_VALUE denotes the maximum number value a
// variable can hold in Promit. You cannot store any 
// greater number than that.

showl Number::MAX_VALUE;

// Number::MIN_VALUE denotes the minimum number value a
// variable can hold in Promit.

showl Number::MIN_VALUE;

// Number::MAX_SAFE_INTEGER and Number::MIN_SAFE_INTEGER
// denotes the maximun and minimum integer value which
// can be represented in Promit without loosing any bit
// of precision.

showl Number::MAX_SAFE_INTEGER;
showl Number::MIN_SAFE_INTEGER;

// Number::DELTA denotes the difference between the
// smallest floating point value greater than 1 and 1.

showl Number::DELTA;

showl 'Really grotesque, I know...';
