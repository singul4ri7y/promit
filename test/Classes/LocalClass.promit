// I love 'const' :).

const fn localize() {
	const class Return {
		feelings() { return 'Feels great to be a local!' }
	};

	return Return;
}

// Now call the function, get the class and call
// method feelings.

showl localize()().feelings();    // Output : Feels great to be a local!
