// Static fields are created within the class
// using the keyword 'static'.

const class Dog {
    const static type = 'German Shepherd';

    const static show_type(type) {
        showl type;
    }
};

// Access static fields using a double colon '::'.

Dog::show_type(Dog::type);    // Output : German Shepherd

// Define a static property outside of class.

Dog::bark = fn() {
    showl 'Bark, bark!';
};

Dog::bark();    // Output : Bark, bark!